<AnchorPane fx:id="addBookPane" prefHeight="690.0" prefWidth="1200.0" style="-fx-background-color: transparent;" stylesheets="@../../css/fullpackstyling.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.libraryapp.AddBookController">
        <AnchorPane prefHeight="300.0" prefWidth="1200.0" style="-fx-border-color: red;">
            <children>
                <ImageView fitHeight="300.0" fitWidth="1200.0" pickOnBounds="true">
                    <image>
                        <Image url="@../../PICTURES/image.png" />
                    </image>
                </ImageView>
                <Label layoutX="200.0" layoutY="130.0" style="-fx-font-size: 23; -fx-font-weight: bold;" text="Add according to ISBN:" textFill="WHITE">
                    <effect>
                        <DropShadow height="58.16" radius="27.67" width="54.52" />
                    </effect>
                </Label>
                <TextField fx:id="isbnAddBookTextField" layoutX="496.0" layoutY="115.0" prefHeight="60.0" prefWidth="350.0" style="-fx-font-size: 23;">
                    <effect>
                        <DropShadow height="41.4" radius="19.4725" width="38.49">
                            <color>
                                <Color red="1.0" />
                            </color>
                        </DropShadow>
                    </effect>
                </TextField>
                <Button fx:id="addBookButton" layoutX="530.0" layoutY="220.0" mnemonicParsing="false" onAction="#addBookButtonPress" prefHeight="45.0" prefWidth="90.0" style="-fx-font-size: 15; -fx-background-color: #E50914A5; -fx-border-color: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-weight: bold;" text="Add" textFill="WHITE" />
         <Button fx:id="cancelButton" layoutX="710.0" layoutY="220.0" mnemonicParsing="false" onAction="#cancelButtonPress" prefHeight="45.0" prefWidth="90.0" style="-fx-font-size: 15; -fx-background-color: #E50914A5; -fx-border-color: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-font-weight: bold;" text="Cancel" textFill="WHITE" />
            </children>
        </AnchorPane>
</AnchorPane>
